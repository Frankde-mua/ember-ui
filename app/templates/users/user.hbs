{{page-title 'User'}}
  <div class="container has-text-centered">
    <div class="column is-3 is-offset-4">

      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>
      <div class="user-profile">
        <figure class="avatar">
          <img src={{@model.image}} width="256px" alt="User" />
        </figure>
        <p class="title has-text-white my-2">
          {{@model.name}}
        </p>
		{{#if @model.value}}
		<p class="subtitle has-text-white my-2">
          {{@model.stmt}}
        </p>
		<br />
		{{/if}}
		
		<button class="button mb-2" type="button" {{on "click" @model.changVal}}>
          Archive/Unarchive
        </button>
      </div>
    </div>
  </div>
{{outlet}}
